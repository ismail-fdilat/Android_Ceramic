<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/nilu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:paddingBottom="30dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nilu2"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/nilu"
            android:background="@drawable/borderbg"
            android:orientation="vertical"
            android:layout_marginBottom="160dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_30"
                android:weightSum="1"
                android:layout_marginRight="@dimen/size_20">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorappbar"
                    android:textSize="@dimen/size_20"
                    android:fontFamily="@font/betm"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/tv_titlerate"/>





            </LinearLayout>

            <RatingBar
                android:id="@+id/rate_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:cursorVisible="true"
                android:drawablePadding="15sp"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:rating="2.5"
                android:layout_gravity="center"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/size_18"
                android:layout_weight=".5"
                android:fontFamily="@font/betm"
                android:gravity="center"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:text="@string/tv_rateapp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorappbar"
                android:layout_marginTop="@dimen/size_40"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/idcancelproduct"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_18"
                    android:fontFamily="@font/betm"
                    android:textColor="@color/colorappbar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/close"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/idaddproduce"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_18"
                    android:fontFamily="@font/betm"
                    android:textColor="@color/colorappbar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/submit"
                    android:textStyle="bold"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>





</RelativeLayout>