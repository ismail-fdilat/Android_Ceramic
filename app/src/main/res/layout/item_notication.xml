<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewdrev1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            >


            <TextView
                android:id="@+id/tv_usernamenoti"
                android:layout_toRightOf="@id/imv_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_16"
                android:fontFamily="@font/betm"
                android:text="@string/app_name"
                android:layout_margin="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_msgnoti"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/imv_notify"
                android:layout_height="wrap_content"
                android:text="Message...."
                android:layout_margin="2dp"
                android:textSize="@dimen/size_14"
                android:fontFamily="@font/betm"
                android:layout_below="@id/tv_usernamenoti" />




            />

            <ImageView
                android:id="@+id/imv_notify"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:padding="6dp"
                android:layout_alignParentLeft="true"
                card_view:srcCompat="@drawable/ic_mail"
                />

            <TextView
                android:id="@+id/tv_datenotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_14"
                android:fontFamily="@font/betm"
                android:text="18-9-2019"
                android:layout_margin="7dp"
                android:textColor="@color/colorPrimary"
                android:layout_above="@id/tv_msgnoti"
                android:layout_alignParentRight="true"
                />





        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>