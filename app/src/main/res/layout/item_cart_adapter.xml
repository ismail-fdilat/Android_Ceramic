<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        android:background="@drawable/borderbg"
        android:layout_marginTop="@dimen/size_5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imv_cart"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="0.7"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
             />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:layout_margin="@dimen/size_5"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_catrycart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_category"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/black"
                    android:fontFamily="@font/betm" />

                <TextView
                    android:id="@+id/tv_descpcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/size_14"
                    android:lines="1"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="@string/tv_titledescriptio"
                    android:fontFamily="@font/betm" />



                <LinearLayout
                    android:id="@+id/ld4"
                    android:layout_below="@+id/vd4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginBottom="@dimen/size_10"
                    android:weightSum="2"
                    >

                    <TextView
                        android:id="@+id/tv_qtytitle"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/betm"
                        android:text="@string/title_qty"
                        android:textSize="@dimen/size_18"
                        android:textColor="@color/colorappbar" />

                    <LinearLayout
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginRight="@dimen/size_5"
                        android:weightSum="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/decrease_cart"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:textSize="@dimen/size_18"
                            android:layout_margin="@dimen/size_5"
                            android:background="@drawable/borderbg"
                             android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorappbar"
                            android:fontFamily="@font/betm"
                            android:text="-" />

                        <EditText
                            android:id="@+id/quantity_cart"
                            android:layout_width="0dp"
                            android:layout_margin="@dimen/size_5"
                            android:layout_weight=".6"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:inputType="number"
                            android:hint="Qty"
                            android:gravity="center"
                            android:background="@drawable/borderbg"
                            android:textSize="@dimen/size_18"
                            android:textColor="@color/colorappbar"
                            android:fontFamily="@font/betm"
                            />

                        <TextView
                            android:id="@+id/increase_cart"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_margin="@dimen/size_5"
                            android:background="@drawable/borderbg"
                            android:textSize="@dimen/size_18"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorappbar"
                            android:fontFamily="@font/betm"
                            android:text="+" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_below="@+id/toolbar_subsubcategry"

                    >

                    <TextView
                        android:id="@+id/tv_pricetitle"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center"
                        android:textSize="@dimen/size_18"
                        android:fontFamily="@font/betm"
                        android:textColor="@color/colorappbar"
                        android:text="@string/tv_titlePrice" />

                    <TextView
                        android:id="@+id/tv_pricemain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center|left"
                        android:textSize="@dimen/size_18"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginRight="@dimen/size_5"
                        android:fontFamily="@font/betm"
                        android:textColor="@color/colorappbar"
                        android:text="250" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_below="@+id/toolbar_subsubcategry"

                    >

                    <TextView
                        android:id="@+id/tv_sizetitle"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center"
                        android:textSize="@dimen/size_18"
                        android:fontFamily="@font/betm"
                        android:textColor="@color/colorappbar"
                        android:text="@string/title_size" />

                    <TextView
                        android:id="@+id/tv_sizemain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_gravity="center_vertical"
                        android:gravity="center|left"
                        android:textSize="@dimen/size_18"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginRight="@dimen/size_5"
                        android:fontFamily="@font/betm"
                        android:textColor="@color/colorappbar"
                        android:text="L" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            android:background="@color/lgrey"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_10"
            android:padding="@dimen/size_5"
            android:background="@drawable/borderbg"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"

                >


                <TextView
                    android:id="@+id/tv_removecart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_remove"
                    android:gravity="center_vertical"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/size_16"
                    android:fontFamily="@font/betm"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_remove"
                    android:drawablePadding="@dimen/size_7"
                    />

                <TextView
                    android:id="@+id/tv_addwishcartnot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_movetowishlist"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/size_16"
                    android:visibility="gone"
                    android:fontFamily="@font/betm"
                    android:drawablePadding="@dimen/size_7"
                    android:drawableLeft="@drawable/ic_wishlistheeart"

                    />

                <TextView
                    android:id="@+id/tv_addwishcart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_movetowishlist"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/size_16"
                    android:fontFamily="@font/betm"
                    android:drawablePadding="@dimen/size_7"
                    android:visibility="gone"
                    android:drawableTint="@color/colorappbar"
                    android:drawableLeft="@drawable/ic_wishlist"

                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>
