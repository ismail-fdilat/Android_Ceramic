<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/size_5"
    android:background="@drawable/borderbg"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_order"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_gravity="center"
         />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_productnameorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_category"
                android:layout_marginTop="@dimen/size_5"
                android:textSize="@dimen/size_16"
                android:textColor="@color/black"
                android:fontFamily="@font/betm"
                ></TextView>

            <TextView
                android:id="@+id/tv_dateorders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:fontFamily="@font/betm"
                ></TextView>



            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="@dimen/size_40"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_3"
                >


                <RatingBar
                    android:id="@+id/ratingBar_orderr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:theme="@style/RatingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    />

                <TextView
                    android:id="@+id/tv_viewdetail"
                    android:layout_width="110dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/betm"
                    android:text="@string/tv_titledetail"
                    android:textSize="@dimen/size_14"
                    android:padding="@dimen/size_7"
                    android:background="@color/colorappbar"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>