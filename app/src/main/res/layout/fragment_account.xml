<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F6F6"
    tools:context=".fragment.AccountFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_acc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:background="@color/colorappbar"
        >

        <TextView
            android:id="@+id/icon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/size_16"
            android:fontFamily="@font/betm"
            android:background="@color/colorappbar"
            android:textColor="@color/white"
            android:text="@string/tv_myacc" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:theme="@style/AppTheme"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_accpic"
                android:layout_width="100dp"
                android:background="@drawable/shadow_bg"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/size_20"
                android:layout_weight="0.2" />


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_10"
                android:elevation="@dimen/size_10"
                card_view:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ll1_pf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_mypf"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="@dimen/size_5"
                            android:drawableTint="@color/colorappbar"
                            android:drawableLeft="@drawable/ic_user"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_mypf"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll1_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_lan"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="@dimen/size_5"
                            android:drawableTint="@color/colorappbar"
                            android:drawableLeft="@drawable/ic_language"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_lan"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll2_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tv_myorder"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="@dimen/size_5"
                            android:drawableTint="@color/colorappbar"
                            android:drawableLeft="@drawable/ic_cart"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_myorder"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll3_addbook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_addr"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:drawableTint="@color/colorappbar"
                            android:padding="@dimen/size_5"
                            android:drawableLeft="@drawable/ic_address"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_addbook"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll2_notify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tv_notify"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="@dimen/size_5"
                            android:drawableTint="@color/colorappbar"
                            android:drawableLeft="@drawable/ic_notify"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/title_notification"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll5_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >




                        <TextView
                            android:id="@+id/tv_call"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/size_5"
                            android:linksClickable="true"
                            android:drawableTint="@color/colorappbar"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_call"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_call"
                            android:autoLink="phone"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll5_whatscall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >




                        <TextView
                            android:id="@+id/tv_whatscall"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/size_5"
                            android:linksClickable="true"
                            android:drawableTint="@color/colorappbar"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_whatsapp"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/title_whatsapp"
                            android:autoLink="phone"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll6_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tv_contactus"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/size_5"
                            android:layout_gravity="center"
                            android:drawableTint="@color/colorappbar"
                            android:drawableLeft="@drawable/ic_email"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_contact"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>





                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll6_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tv_changepassword"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/size_5"
                            android:layout_gravity="center"
                            android:drawableTint="@color/colorappbar"
                            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_changepassword"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>





                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll7_rateus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:padding="@dimen/size_10"
                        android:orientation="horizontal"
                        >



                        <TextView
                            android:id="@+id/tv_rate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:drawableTint="@color/colorappbar"
                            android:drawableLeft="@drawable/ic_like"
                            android:drawablePadding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_rate"
                            android:padding="@dimen/size_5"
                            android:textSize="@dimen/size_14"
                            android:textColor="@color/darkgrey"
                            android:fontFamily="@font/betm"
                            ></TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/size_20"
                        android:layout_marginTop="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_20"
                        android:weightSum="1"
                        >



                        <TextView
                            android:layout_weight="0.5"
                            android:background="@drawable/borderbg"
                            android:id="@+id/tv_loginpf"
                            android:fontFamily="@font/betm"
                            android:textSize="@dimen/size_14"
                            android:visibility="visible"
                            android:textColor="@color/colorappbar"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_margin="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10"
                            android:text="@string/tv_loginmain"
                            />




                        <TextView
                            android:id="@+id/tv_signuppf"
                            android:fontFamily="@font/betm"
                            android:textSize="@dimen/size_14"
                            android:visibility="visible"
                            android:textColor="@color/colorappbar"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:layout_margin="@dimen/size_10"
                            android:background="@drawable/borderbg"
                            android:padding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/signup"
                            />

                        <TextView
                            android:id="@+id/tv_logout"
                            android:fontFamily="@font/betm"
                            android:textSize="@dimen/size_14"
                            android:visibility="gone"
                            android:textColor="@color/colorappbar"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:layout_margin="@dimen/size_10"
                            android:background="@drawable/borderbg"
                            android:padding="@dimen/size_10"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            />





                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>